{
    "id": "11111111",
    "title": "Salesforce",
    "version": "1.0.0",
    "icon": "https://docs.secureauth.com/download/attachments/44830637/Salesforce.png",
    "aliases": [
        "SalesforceSP"
    ],
    "entries":
    {
        "allowAllGroups": {
            "states": "Allow every group in your selected data stores to access this application.",
            "controlType": "switch",
            "defaultValue": false,
            "notify": {
                "allGroupsAllowed": true,
                "selectGroupsAllowed": false
            }
        },
        "applicationName": {
            "defaultValue:t": "$.title",
            "controlType": "input",
            "dataModelName": "name",
            "label": "Application Name",
            "stack": "medium"
        },
        "applicationDescription": {
            "controlType": "input",
            "dataModelName": "description",
            "label": "Application Description"
        },
        "applicationLogo": {
            "defaultValue:t": "$.icon",
            "displayOnly@summary": false,
            "controlType": "custom",
            "dataModelName": "logo",
            "componentId": "imageUpload",
            "stack": ":medium",
            "properties": {
                "maxFileSize": 2000,
                "allowedTypes": [
                    "jpeg",
                    "png"
                ]
            },
            "properties@summary": {
                "displayOnly": true,
                "isSquare": true
            },
            "order": [
                "downloadIcon",
                "downloadLabel"
            ]
        },
        "attributeName": {
            "label": "Attribute Name",
            "controlType": "input",
            "dataModelName": "name"
        },
            "attributeNamespace": {
            "label": "Namespace (1.1)",
            "controlType": "input",
            "dataModelName": "namespace"
        },
            "attributeProfileField": {
            "label": "Data Store Property",
            "controlType": "select",
            "dataModelName": "property",
            "emptyOption": "",
            "source": "options:dataStoreProperties:dataStoreOptions"
        },
        "assertionValidHours": {
            "controlType": "input",
            "type": "number",
            "extras": [
                { "name": "static:body", "content:n": "&nbsp;&nbsp;Hours&nbsp;"}
            ],
            "extrasAt": "field",
            "width": 9,
            "inline": true,
            "stack": "small"
        },
        "assertionValidMinutes": {
            "controlType": "input",
            "type": "number",
            "extras": [
                { "name": "static:body", "content:n": "&nbsp;&nbsp;Minutes&nbsp;"}
            ],
            "extrasAt": "field",
            "width": 9,
            "inline": true,
            "stack": "small"
        },
        "dataStores": {
            "controlType": "pills",
            "label": "Data Stores",
            "description": "Select the datastores for this application.  Only users in these data stores can access this application.",
            "description@summary": null,
            "allowDuplicates": false,
            "stack": "medium",
            "width": 6,
            "source": "data:dataStores:dataStoreInputList"
        },
        "groups": {
            "controlType": "pills",
            "label": "Groups",
            "description": "Only these groups will have access to this application.",
            "description@summary": null,
            "width": 6,
            "modify": {
                "allGroupsAllowed": {
                    "enabled": false
                },
                "selectGroupsAllowed": {
                    "enabled": true
                }
            }
        },
        "initiationType": {
            "label": "Connection Type",
            "controlType": "select",
            "defaultValue": "sp",
            "width": 7,
            "noMargin": true,
            "options": [
                {
                "value": "sp",
                "display": "SP Initiated"
                },
                {
                "value": "idp",
                "display": "IdP Initiated"
                }
            ],
            "notify": {
                "initiationTypeSP": "sp",
                "initiationTypeIdP": "idp"
            }
        },
        "initiationBy": {
            "controlType": "radiogroup",
            "defaultValue": "redirect",
            "noFieldset": true,
            "stack": "small",
            "properties": {
                "inline": true,
                "alignment": ":middle",
                "stack": ":medium"
            },
            "options": [
                {
                "value": "redirect",
                "display": "By Redirect"
                },
                {
                "value": "post",
                "display": "By Post",
                "extras": "initiationByTooltip"
                }
            ],
            "modify": {
                "initiationTypeSP": {
                "visible": true
                },
                "initiationTypeIdP": {
                "visible": false
                }
            }
        },
        "wsFedReplyTo_SamlTargetUrl":
        {
            "label": "SAML Target URL",
            "visible": false,
            "controlType": "input",
            "defaultValue": "https://saml.salesforce.com"
        },
        "audience":
        {
            "label": "SAML Audience",
            "visible": false,
            "controlType": "input",
            "defaultValue": "https://saml.salesforce.com"
        },
        "xxxConsumerID":
        {
            "label": "SAML Consumer URL ID ",
            "controlType": "input",
            "extras": "xxxConsumerIDTooltip",
            "width": 5
        },
        "issuer":
        {
            "label": "SAML Issuer",
            "controlType": "input",
            "description": "A unique name that must match exactly on the SecureAuth IdP side and the Salesforce side",
            "description@providersInfo": null,
            "width": 5,
            "displayOnly@providersInfo": true,
            "stack@providersInfo": "medium",
            "noMargin@providersInfo": true
        },
        "assertionConsumerService":
        {
            "label": "SAML Consumer URL",
            "visible": false,
            "controlType": "input",
            "fixedValue:i": "https://login.salesforce.com?so=%{_.xxxConsumerID}"
        },
        "recipient":
        {
            "label": "SAML Recipient URL",
            "visible": false,
            "controlType": "input",
            "fixedValue:i": "https://login.salesforce.com?so=%{_.xxxConsumerID}"
        }
    },
    "statics":
    {
        "attributeAddButton": {
            "content:n": "&nbsp;&nbsp;Add SAML Attribute",
            "before": "attributeAddIcon",
            "dashed": true,
            "expand": true,
            "clickAction": "attributeItemAdd",
            "modify": {
                "attributeItemDisableAdd": {
                    "disabled": true
                },
                "attributeItemEnableAdd": {
                    "disabled": false
                }
            }
        },
        "attributeAddIcon": {
            "icon": "add",
            "size": "medium"
        },
        "attributeCallout": {
            "after": [
                "attributeInfo",
                "attributeNamespace"
            ],
            "stack": "::medium"
        },
        "attributeDeleteButton": {
            "content": " Delete Attribute",
            "before": {
                "name": "static:icon",
                "icon": "remove",
                "type": "destructive",
                "size": "medium"
            },
            "type": "destructive",
            "dashed": true,
            "modify": {
                "attributeItemDisableDelete": {
                    "disabled": true
                },
                "attributeItemEnableDelete": {
                    "disabled": false
                }
            }
        },
        "attributesHeader": {
            "content": "SAML ATTRIBUTES",
            "small": true,
            "stack": "large"
        },
        "appSettingsHeader": {
            "content": "Application Settings",
            "stack": "large"
        },
        "chevronIconRight": {
            "staticType": "icon",
            "icon": "chevron-right",
            "size": "medium",
            "clickAction": {
                "actions": "see providers",
                "sendToParent": true
            }
        },
        "connectionSettingsHeader": {
            "content": "CONNECTION SETTINGS",
            "contentEast": {
                "name": "editIcon",
                "clickAction": {
                    "actions": "edit groups",
                    "sendToParent": true
                }
            },
            "small": true,
            "stack": "large"
        },
        "dataStoresAndGroupsHeader": {
            "content": "USER DATA STORES AND GROUPS",
            "contentEast": {
                "name": "editIcon",
                "clickAction": {
                    "actions": "edit groups",
                    "sendToParent": true
                }
            },
            "small": true,
            "stack": "large"
        },
        "defaultHeader": {
            "small": true,
            "stack": "large"
        },
        "downloadIcon": {
            "staticType": "icon",
            "icon": "upload",
            "size": "medium"
        },
        "downloadLabel": {
            "staticType": "text",
            "content": " Upload"
        },
        "descriptionForSummary": {
            "content:t": "_.description",
            "staticType": "color",
            "color": "disabled"
        },
        "editIcon": {
            "icon": "pencil",
            "size": "medium"
        },
        "initiationByTooltip": {
            "content": "The SAML specification allows for SPs to send their authentication requests (AuthnRequest) to the IdP either by HTTP Post or HTTP Redirect. Your SPâ€™s configuration or metadata will tell you what is used for the authentication request.",
            "inline": true,
            "width": "medium",
            "pad": ":::small"
        },
        "nameForSummary": {
            "content:t": "_.name",
            "staticType": "headline",
            "stack": "small"
        },
        "providersCalloutHeader": {
            "content:n": "Info for service providers&nbsp; ",
            "staticType": "color",
            "color": "info",
            "after": [
                "chevronIconRight"
            ]
        },
        "providersCalloutDescription": {
            "content": "Idp URLs, certificates and metadata files used for integrating with Service Providers.",
            "staticType": "color",
            "color": "disabled"
        },
        "providersCallout": {
            "type": "info",
            "after": [
                "providersCalloutHeader",
                "providersCalloutDescription"
            ]
        },
        "settingsHeader": {
            "content": "CONFIGURE CONNECTION",
            "small": true,
            "stack": "large"
        },
        "settingsCallout": {
            "after": [
                "applicationSettings"
            ]
        },
        "xxxConsumerIDTooltip":
        {
            "content": "Customer's Salesforce ID number (can be found in the Salesforce admin console, in the Endpoints section of the Security Controls --> Single Sign-On Settings)"
        }
    },
    "layouts": {
        "applicationInputs": {
            "layoutType": "layout",
            "boxWidth": 6,
            "columns": {
                "imageUpload": {
                    "verticalAlign": "bottom",
                    "width": "auto",
                    "order": "applicationLogo"
                },
                "applicationInfo": [
                    "applicationName",
                    "applicationDescription"
                ]
            }
        },
        "applicationSettings": {
            "layoutType": "layout",
            "columns": {
                "imageUpload": {
                "verticalAlign": "bottom",
                "width": "auto",
                "order": "applicationLogo"
                },
                "appSummary": [
                "nameForSummary",
                "descriptionForSummary"
                ],
                "edition":{
                  "width": "auto",
                  "order": [{
                    "name": "editIcon",
                    "clickAction": {
                        "actions": "edit details",
                        "sendToParent": true
                    }          
                  }]
                }
            }
        },
        "attributeInfo": {
            "layoutType": "grid",
            "columns": {
                "attributeProfile": {
                    "small": 8,
                    "order": [
                        "attributeName",
                        "attributeProfileField"
                    ]
                },
                "attributeActions": {
                    "align": "right",
                    "order": "attributeDeleteTooltipConfirm"
                }
            }
        }     
    },
    "groups": {
        "attributeItem": {
            "logical": true,
            "dataModelName": "attributes",
            "repeat": {
                "max": 10
            },
            "order": "attributeCallout"
        },
        "assertionWillBeValid": {
            "inline": true,
            "order": [
                {
                  "name": "static:label",
                  "content": "SAML Valid Hours"
                },
                {
                  "name": "static:small",
                  "content": "How long SAML assertion is valid"
                },
                "assertionValidHours",
                "assertionValidMinutes"
            ]
        },
        "providerUrls": {
            "logical": true,
            "source": "value:applicationProviderInfo",
            "order": [
                {
                "name": "static:label",
                "stack": "medium",
                "content": "Login URL"
                },
                {
                "name": "static:color",
                "color": "disabled",
                "content:t": "_.providerUrls.loginURL"
                },
                "loginUrlCopy",
                {
                "name": "static:label",
                "stack": "medium",
                "content": "Logout URL"
                },
                {
                "name": "static:color",
                "color": "disabled",
                "content:t": "_.providerUrls.logoutURL"
                },
                "logoutUrlCopy"
            ]
        },
        "templateRoot": {
            "order": [
                "settingsHeader",
                "initiationType",
                "initiationBy",
                "wsFedReplyTo_SamlTargetUrl",
                "audience",
                {
                    "name": "defaultHeader",
                    "content": "SAML ASSERTION"
                },
                "xxxConsumerID",
                "issuer",
                "assertionWillBeValid",
                "assertionConsumerService",
                "recipient",
                "attributesHeader",
                "attributeItem",
                "attributeAddButton"              
            ],
            "order@details": [
                "applicationInputs",
                "dataStores",
                "groups",
                "allowAllGroups"
            ],
            "order@providersInfo": [
                "providerUrls",
                "issuer",
                "issuerCopy"
            ],
            "order@summary": [
                "settingsCallout",
                "appSettingsHeader",
                "dataStoresAndGroupsHeader",
                "dataStores",
                "groups",
                "connectionSettingsHeader",
                "providersCallout"
            ],
            "order@updateGroups": [
                "dataStores",
                "groups",
                "allowAllGroups"        
            ],
            "order@updateDetails": [
                "applicationInputs"
            ]
        }
    },
    "others": {
        "attributeDeleteTooltipConfirm": {
            "trigger": "attributeDeleteButton",
            "message": "Are you sure you want to delete this attribute?",
            "action:i": "attributeItemDelete%{local.name}",
            "placement": "top-end"
        },
        "issuerCopy": {
            "otherType": "copytoclipboard",
            "copy:t": "issuer",
            "stack": "medium"
        },
        "loginUrlCopy": {
            "otherType": "copytoclipboard",
            "copy:t": "_.providerUrls.loginURL"
        },
        "logoutUrlCopy": {
            "otherType": "copytoclipboard",
            "copy:t": "_.providerUrls.logoutURL"
        }
    },
    "views": {
        "summary": {
            "entries": {
                "displayOnly": true
            }
        }
    },
    "order": [
        "templateRoot"
    ]
}
